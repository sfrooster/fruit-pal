{
  "name": "fruit-pal",
  "version": "1.0.0",
  "description": "tropical fruit algorithmic trading tool",
  "main": "dist/server.js",
  "author": "Michael Haan",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "express": "4.17.1",
    "pm2": "5.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/node": "16.4.13",
    "@types/winston": "^2.4.4",
    "typescript": "4.3.5"
  },
  "scripts": {
    "build": "tsc -p .",
    "clean": "[ ! -d './dist' ] || rm -rf ./dist",
    "rebuild": "yarn clean; yarn build",
    "logs": "pm2 logs",
    "monitor": "pm2 monitor",
    "start:basic": "node ./dist/server.js",
    "start:pm2:dev": "pm2 start ./dist/config/pm2/pm2.config.js --env development",
    "start:pm2:prod": "pm2 start ./dist/config/pm2/pm2.config.js --env production",
    "start:pm2": "yarn start:pm2:dev",
    "start:pm2:logs": "yarn start:pm2; yarn logs"
  }
}
